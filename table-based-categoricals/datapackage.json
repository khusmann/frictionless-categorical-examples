{
  "name": "table-based-categoricals",
  "description": "An example datapackage that demonstrates table-based categorical types",
  "resources": [
    {
      "name": "diet_log",
      "path": "diet_log.csv",
      "profile": "tabular-data-resource",
      "schema": {
        "fields": [
          {
            "name": "date",
            "type": "date"
          },
          {
            "name": "participant_id",
            "type": "integer"
          },
          {
            "name": "item_code",
            "type": "integer",
            "categories": {
              "resource": "items",
              "valueField": "item_id",
              "labelField": "name"
            }
          },
          {
            "name": "quantity",
            "type": "number"
          }
        ]
      }
    },
    {
      "name": "items",
      "path": "items.csv",
      "profile": "tabular-data-resource",
      "schema": {
        "fields": [
          {
            "name": "item_id",
            "type": "integer"
          },
          {
            "name": "name",
            "type": "string"
          },
          {
            "name": "weight_g",
            "type": "number"
          },
          {
            "name": "calories",
            "type": "number"
          },
          {
            "name": "meal_type",
            "type": "string",
            "categories": {
              "resource": "meal_types",
              "valueField": "meal_type"
            }
          }
        ]
      }
    },
    {
      "name": "meal_types",
      "path": "meal_types.csv",
      "profile": "tabular-data-resource",
      "schema": {
        "fields": [
          {
            "name": "meal_type",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          },
          {
            "name": "popularity",
            "type": "number"
          }
        ]
      }
    }
  ]
}
